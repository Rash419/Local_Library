extends layout

block content
    h1 #{title}: #{genre.name}

    if books_genre.length

        p #[strong Delete the following books before attempting to delete this genre.]
  
        div(style='margin-left:20px;margin-top:20px') 

        h4 Books
        each book in books_genre
            a(href=book.url) #{book.title} 
            br 
    else
        
        p Do you really want to delete this genre?
    
        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type='hidden',name='genreid', required='true', value=genre._id )
            button.btn.btn-primary(type='submit') Delete